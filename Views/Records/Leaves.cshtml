@model FinalPayrollSystem.Models.LeavesModel

@{
    ViewData["Title"] = "Leaves";
    Layout = "_Layout";
}

<h1 class="text-center">Leaves</h1>
<hr />


<div class="row">
    <div class="col-md-2">
        <h4>Apply Leave</h4>
        <hr />
        <h5>@TempData["Result"]</h5>
        <form asp-action="Leaves" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="employeeid" class="control-label"></label>
                <input id="lv-empID" asp-for="employeeid" list="dt-empID" class="form-control" />
                <span asp-validation-for="employeeid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="employeename" class="control-label"></label>
                <input id="lv-empName" asp-for="employeename" class="form-control" readonly />
                <span asp-validation-for="employeename" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="appliedleave" class="control-label"></label>
                <select asp-for="appliedleave" class="form-control">
                    <option value="">select leave...</option>
                    <option value="Sick">Sick Leave</option>
                    <option value="Vacation">Vacation Leave</option>
                    <option value="Maternity">Maternity Leave</option>
                    <option value="Paternity">Paternity Leave</option>
                    <option value="Rehabilitation">Rehabilitation Leave</option>
                    <option value="Study">Study Leave</option>
                </select>
                <span asp-validation-for="appliedleave" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="rempaidleave" class="control-label"></label>
                <input asp-for="rempaidleave" class="form-control" value="10" readonly/>
                <span asp-validation-for="rempaidleave" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isdeductible" /> @Html.DisplayNameFor(model => model.isdeductible)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="leavedatefrom" class="control-label"></label>
                <input asp-for="leavedatefrom" class="form-control" />
                <span asp-validation-for="leavedatefrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="leavedateto" class="control-label"></label>
                <input asp-for="leavedateto" class="form-control" />
                <span asp-validation-for="leavedateto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-10">
        <table id="tblLeave" class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Employee Id</th>
                    <th>Employee Name</th>
                    <th>Applied Leave</th>
                    <th>Remain Paid Leave</th>
                    <th>Is Deductible</th>
                    <th>Leave Date from</th>
                    <th>Leave Date to</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/display-leaves.js"></script>
    <script src="~/js/leave-employeeid-datalist.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
